rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can manage their own document
    match /users/{userId} {
      // Allow authenticated users to read all profiles (for Team Management)
      allow read: if request.auth != null;
      // Allow authenticated users to manage team members
      allow create, update, delete: if request.auth != null;
    }
    
    // Projects - authenticated users can read/write
    match /projects/{projectId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      // Allow if in teamMembers OR if is owner
      allow update, delete: if request.auth != null && 
        (request.auth.uid in resource.data.teamMembers || request.auth.uid == resource.data.ownerId);
    }
    
    // Notifications - users can manage their own
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
    }
    
    // Payments - authenticated users can read/write
    match /payments/{paymentId} {
      allow read, write: if request.auth != null;
    }
    
    // Revenue rules, ledger, etc - authenticated users can access
    match /revenueRules/{ruleId} {
      allow read, write: if request.auth != null;
    }
    
    match /ledgerEntries/{entryId} {
      allow read, write: if request.auth != null;
    }
    
    match /settlements/{settlementId} {
      allow read, write: if request.auth != null;
    }
    
    match /auditLogs/{logId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Files - users can manage files they uploaded
    match /files/{fileId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.auth.uid == request.resource.data.uploadedBy;
    }
  }
}
